<section class="container my-5 fade-in" data-controller="home">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Contact Us</h1>
      <p class="text-center mb-4">Have questions, suggestions, or want to join Food For Less?</p>
      
      <%= form_with url: "#", local: true, class: "needs-validation" do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Your Name" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :email, "Your Email" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :message, "Message" %>
          <%= form.text_area :message, class: "form-control", rows: 5, required: true %>
        </div>
        <%= form.submit "Send", class: "btn btn-success w-100" %>
      <% end %>
    </div>
  </div>
</section>