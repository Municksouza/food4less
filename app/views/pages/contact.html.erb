<div class="container mt-5">
  <h1 class="mb-4">Contact Us</h1>

  <p>If you have any questions, feedback, or need support, feel free to reach out to us using the form below.</p>

  <%= simple_form_for :contact, url: "#", html: { class: "mt-4" } do |f| %>
    <div class="mb-3">
      <%= f.input :name, required: true, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :email, required: true, input_html: { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.input :message, as: :text, required: true, input_html: { rows: 5, class: "form-control" } %>
    </div>

    <div>
      <%= f.button :submit, "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>