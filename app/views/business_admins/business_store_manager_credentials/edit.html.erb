<h1 class="mb-4"><i class="fas fa-user-shield me-2"></i> Edit Store Manager Credentials</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <%= simple_form_for(@store_manager, url: business_admins_store_store_manager_credentials_path(@store), html: { class: "edit-credentials-form needs-validation" }) do |f| %>
        <div class="form-section">
          <%= f.input :email, label: "Email", required: true, input_html: { class: "form-control" } %>
          <%= f.input :password, label: "New Password", required: false, hint: "Leave blank if you don't want to change it", input_html: { class: "form-control" } %>
          <%= f.input :password_confirmation, label: "Confirm New Password", required: false, input_html: { class: "form-control" } %>
        </div>

        <div class="form-actions mt-3 d-flex flex-column flex-md-row">
          <%= f.button :submit, "Update Credentials", class: "btn btn-outline-danger mb-2 mb-md-0" %>
          <%= link_to "Back", business_admins_store_dashboard_path(@store), class: "btn btn-secondary ms-md-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>