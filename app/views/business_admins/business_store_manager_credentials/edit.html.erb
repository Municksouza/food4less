<h1>Edit Store Manager Credentials</h1>

<%= simple_form_for(@store_manager, url: business_admins_store_store_manager_credentials_path(@store)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "Email", required: true %>
    <%= f.input :password, label: "New Password", required: false, hint: "Leave blank if you don't want to change it" %>
    <%= f.input :password_confirmation, label: "Confirm New Password", required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Credentials", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", business_admins_store_dashboard_path(@store), class: "btn btn-secondary" %>