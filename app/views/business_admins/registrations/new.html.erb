<h2>Sign Up as a Business</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Business Name", required: true %>
    <%= f.input :address, label: "Business Address", required: true %>
    <%= f.input :zip_code, label: "ZIP Code", required: true %>
    <%= f.input :phone, label: "Phone Number", required: true %>
    <%= f.input :email, label: "Email Address", required: true %>
    <%= f.input :password, label: "Password", required: true %>
    <%= f.input :password_confirmation, label: "Confirm Password", required: true %>
    <%= f.input :logo, as: :file, label: "Business Logo (optional)" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>