<h1 class="mb-4">Reports</h1>

<%= link_to 'New Report', business_admins_store_reports_path, class: "btn btn-success mb-3" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Store</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.report_type %></td>
        <td><%= report.store&.name %></td>
        <td><%= link_to 'Show', business_admins_report_path(report), class: "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_business_admins_report_path(report), class: "btn btn-sm btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>