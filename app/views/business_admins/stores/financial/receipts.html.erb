<h1 class="mb-4">Receipts</h1>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% @receitas.each do |receita| %>
            <tr>
                <td><%= l(receita.data) %></td>
                <td><%= number_to_currency(receita.valor) %></td>
                <td><%= receita.descricao %></td>
            </tr>
        <% end %>
    </tbody>
</table>