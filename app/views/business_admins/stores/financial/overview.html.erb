<h1 class="mb-4">Financial Overview</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Recent Revenues</h3>
        <ul class="list-group">
            <% @receitas_recent.each do |receita| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= receita.descricao %>
                    <span class="badge bg-primary rounded-pill"><%= number_to_currency(receita.valor) %></span>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Recent Payments</h3>
        <ul class="list-group">
            <% @pagamentos_recent.each do |pagamento| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= pagamento.fornecedor.nome %>
                    <span class="badge bg-success rounded-pill"><%= number_to_currency(pagamento.valor) %></span>
                </li>
            <% end %>
        </ul>
    </div>
</div>