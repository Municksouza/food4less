<h1 class="mb-4">Refunds</h1>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Reason</th>
        </tr>
    </thead>
    <tbody>
        <% @refunds.each do |refund| %>
            <tr>
                <td><%= l(refund.date) %></td>
                <td><%= number_to_currency(refund.amount) %></td>
                <td><%= refund.reason %></td>
            </tr>
        <% end %>
    </tbody>
</table>