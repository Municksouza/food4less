<!-- app/views/customers/registrations/new.html.erb -->
<div
  class="signup-page d-flex align-items-center justify-content-center"
  style="background: url(<%= asset_path 'big-burger.png' %>) center center / cover no-repeat; position: relative;"
>
  <!-- Camada semi-transparente -->
  <div class="bg-overlay"></div>

  <div class="signup-form-container p-5 bg-white rounded shadow" style="position: relative; z-index: 1; max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name, required: true %>
      <%= f.input :phone, required: true %>
      <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
      <%= f.input :image, as: :file, label: "Profile Image (optional)" %>

      <div class="text-center mt-4">
        <%= f.button :submit, "Sign up", class: "btn btn-danger px-5" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>