<!-- app/views/customers/registrations/new.html.erb -->
<div
  class="signup-page d-flex align-items-center justify-content-center min-vh-100"
  style="background: url(<%= asset_path 'big-burger.png' %>) center center / cover no-repeat; position: relative;"
>
  <!-- Semi-transparent overlay -->
  <div class="bg-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0;"></div>

  <div class="signup-form-container p-4 p-md-5 bg-white rounded shadow"
       style="position: relative; z-index: 1; max-width: 400px; width: 100%; box-sizing: border-box;">
    <h2 class="text-center mb-4">Sign Up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name, required: true, label: "Name" %>
      <%= f.input :phone, required: true, label: "Phone" %>
      <%= f.input :email, required: true, autofocus: true, label: "Email", input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  label: "Password",
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, required: true, label: "Password Confirmation", input_html: { autocomplete: "new-password" } %>
      <%= f.input :image, as: :file, label: "Profile Image (optional)" %>

      <div class="text-center mt-4">
        <%= f.button :submit, "Sign Up", class: "btn btn-danger px-5 w-100" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>