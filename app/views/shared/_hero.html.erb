<div data-controller="home">
  <section class="hero-split-section position-relative">
    <!-- Decorative background -->
    <%= image_tag "Vector7.png", alt: "", class: "hero-blob", aria: { hidden: true } %>

    <div class="container-fluid py-5 h-100">
      <div class="row h-100 align-items-center">
        <!-- LEFT SIDE: Text -->
        <div class="col-lg-6 col-md-12 hero-text-col text-center text-lg-start">
          <div class="hero-text-overlay">
            <h1 class="hero-title">Discover Flavor.</h1>
            <h2 class="hero-title">Save Big.</h2>
            <p class="hero-subtitle">Local deals youâ€™ll love.</p>
          </div>
        </div>

        <!-- RIGHT SIDE: Carousel with 1 card -->
        <div class="col-lg-6 col-md-12 hero-carousel-col text-center">
          <div class="star-blob position-relative d-inline-block">
            <%= image_tag "Star12.png",
                          alt: "",
                          aria: { hidden: true },
                          class: "discount-blob img-fluid" %>
            <span class="star-blob-text">Hot Deals</span>
            <div class="star-blob-arrows d-flex justify-content-center mt-2">
              <%= image_tag "rightarrow.png", alt: "Right Arrow", class: "mx-2 img-fluid" %>
              <%= image_tag "leftarrow.png", alt: "Left Arrow", class: "mx-2 img-fluid" %>
            </div>
          </div>
          <div class="single-carousel mt-4">
            <%= render "shared/products_section", product: @products.first %>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Decoration -->
    <div class="hero-footer-left position-absolute start-0">
      <%= image_tag "footer.png", alt: "Footer Left Decoration", class: "img-fluid" %>
    </div>
  </section>
</div>