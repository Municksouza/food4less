<li class="sidebar-item">
  <a href="#" class="sidebar-link tooltip" data-action="click->sidebar#toggleSubmenu">
    <i class="fas fa-chart-pie me-2"></i>
    <span class="link sidebar-label">Finance</span>
    <i class="fas fa-chevron-down submenu-toggle-icon"></i>
    <span class="tooltip__content">Finance</span>
  </a>
  <ul class="submenu collapse">
    <% stores.each do |store| %>
      <li class="submenu-title px-3 mt-2 text-muted">
        <%= store.name %>
      </li>
      <li>
        <%= link_to business_admins_store_receipts_path(store), class: "submenu-link" do %>
          <i class="fas fa-receipt me-2"></i>Receipts
        <% end %>
      </li>
      <li>
        <%= link_to business_admins_store_refunds_path(store), class: "submenu-link" do %>
          <i class="fas fa-undo me-2 text-success"></i>Refunds
        <% end %>
      </li>
    <% end %>
  </ul>
</li>