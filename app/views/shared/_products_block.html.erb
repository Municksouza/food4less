<section class="product-scroll-section py-5" id="products-section">
  <div class="container">
    <div class="section-header d-flex justify-content-between align-items-center mb-4">
      <div>
        <h6 class="text-muted mb-1">Fresh Finds</h6>
        <h2 class="fw-bold">Explore Top Deals from Local Shops</h2>
      </div>

      <div class="search-bar mb-4">
        <form class="d-flex align-items-center search-inline-form" action="/search" accept-charset="UTF-8" method="get">
          <input 
            type="text" 
            name="query" 
            id="query" 
            placeholder="Search..." 
            class="form-control form-control-sm search-inline-input">
          <button type="submit" class="btn btn-sm btn-search">
            <i class="bi bi-search"></i>
          </button>
        </form>
      </div>
    </div>

    <div class="product-scroll-wrapper shadow-sm p-3 rounded">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% @products.each do |product| %>
          <div class="col">
            <%= render partial: "stores/products/product_card", locals: { product: product } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>