<section class="c-outer-ticker outer-block-ticker-section" data-theme="dark-alt">
  <div class="c-ticker c-ticker--small"
       style="--c-ticker-animation-duration: 20000ms;">
    <%# Repeat "GetFood4Less" multiple times to fill the loop %>
    <% items = Array.new(12, "GetFood4Less") %>
    <% 2.times do %> <!-- Render the double container for continuous loop -->
      <div class="c-ticker__content flex flex-row flex-nowrap items-center">
        <% items.each do |label| %>
          <div class="c-ticker__item"><%= label %></div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>