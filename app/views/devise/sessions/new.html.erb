<!-- app/views/devise/sessions/new.html.erb -->
<div
  class="login-page d-flex align-items-center justify-content-center min-vh-100"
  style="background: url(<%= asset_path 'big-burger.png' %>) center center / cover no-repeat; position: relative;"
>
  <!-- Semi-transparent overlay -->
  <div
    class="bg-overlay"
    style="
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.4);
      z-index: 0;
    "
  ></div>

  <!-- Login card -->
  <div
    class="login-form-container p-3 p-md-4 bg-white rounded shadow"
    style="
      position: relative;
      z-index: 1;
      max-width: 400px;
      width: 100%;
      box-sizing: border-box;
    "
  >
    <h2 class="text-center mb-4">Log In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <%= f.input :email,
                  required: true,
                  label: "Email",
                  input_html: { autocomplete: "email", class: "form-control" } %>

      <%= f.input :password,
                  required: true,
                  label: "Password",
                  input_html: { autocomplete: "current-password", class: "form-control" } %>

      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me,
                    as: :boolean,
                    label: "Remember me",
                    wrapper_html: { class: "form-check small-checkbox mb-3" },
                    input_html: { class: "form-check-input" },
                    label_html: { class: "form-check-label" } %>
      <% end %>

      <div class="text-center mt-4">
        <%= f.button :submit, "Log in", class: "btn btn-danger px-5 w-100" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>